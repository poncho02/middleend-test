{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Middleend App",
    "description": "Documentation of endpoints exposed in the REST API"
  },
  "host": "localhost:8080",
  "basePath": "/",
  "tags": [
    {
      "name": "Items",
      "description": "Endpoint"
    },
    {
      "name": "Search",
      "description": "Endpoint"
    },
    {
      "name": "Health",
      "description": "Endpoint"
    }
  ],
  "schemes": [
    "http"
  ],
  "securityDefinitions": {
    "authorization": {
      "type": "apiKey",
      "name": "x-auth-token",
      "in": "header"
    }
  },
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/health/": {
      "get": {
        "tags": [
          "Health"
        ],
        "description": "endpoint to know if the api is working",
        "parameters": [],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/v1/items/{id}": {
      "get": {
        "tags": [
          "Items"
        ],
        "description": "endpoint to obtain the details of a specific MeLi item",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "Id corresponding to the item in the MeLi catalog"
          }
        ],
        "responses": {
          "200": {
            "description": "Resultado",
            "schema": {
              "$ref": "#/definitions/Items"
            }
          },
          "400": {
            "description": "Bad Request"
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/v1/search/{site}/{query}": {
      "get": {
        "tags": [
          "Search"
        ],
        "description": "endpoint to search for articles in MeLi",
        "parameters": [
          {
            "name": "site",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "Is the nomenclature of the catalog site to search"
          },
          {
            "name": "query",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "Article keyword to search"
          },
          {
            "name": "sort",
            "in": "query",
            "description": "Order of the results",
            "type": "string"
          },
          {
            "name": "limit",
            "in": "query",
            "description": "Maximum number of results",
            "type": "number"
          },
          {
            "name": "offset",
            "in": "query",
            "description": "Number of results to skip",
            "type": "number"
          }
        ],
        "responses": {
          "200": {
            "description": "Resultados",
            "schema": {
              "$ref": "#/definitions/Search"
            }
          },
          "400": {
            "description": "Bad Request"
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    }
  },
  "definitions": {
    "Items": {
      "type": "object",
      "properties": {
        "author": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string",
              "example": "Edgar"
            },
            "lastname": {
              "type": "string",
              "example": "Salgado"
            }
          }
        },
        "item": {
          "type": "object",
          "properties": {
            "id": {
              "type": "string",
              "example": "Lorem ipsum odor amet"
            },
            "title": {
              "type": "string",
              "example": "Lorem ipsum odor amet, consectetuer adipiscing elit"
            },
            "price": {
              "type": "object",
              "properties": {
                "currency": {
                  "type": "string",
                  "example": "MXN"
                },
                "amount": {
                  "type": "number",
                  "example": 100
                },
                "decimals": {
                  "type": "number",
                  "example": 10
                }
              }
            },
            "picture": {
              "type": "string",
              "example": "https://http2.mlstatic.com/D_923597-MLB52540279668_112022-O.jpg"
            },
            "condition": {
              "type": "string",
              "example": "new"
            },
            "free_shipping": {
              "type": "boolean",
              "example": true
            },
            "sold_quantity": {
              "type": "number",
              "example": 5
            },
            "description": {
              "type": "string",
              "example": "Lorem ipsum odor amet, consectetuer adipiscing elit. Blandit scelerisque per dictum a curabitur. Quis luctus blandit placerat; rutrum platea eget. Risus aliquet commodo natoque adipiscing dui curabitur sociosqu porta. Elit pretium nam dapibus ut habitant libero nunc sem viverra. Bibendum lacus eleifend turpis mauris faucibus nunc cras fames curae. Leo porta feugiat consectetur tortor justo, nisl proin. Egestas fames convallis ex id sagittis dis nisl nullam tempus. Sem id magna; laoreet nostra pulvinar ornare. Nascetur vitae gravida ut quam montes per tempus imperdiet"
            }
          }
        }
      }
    },
    "Search": {
      "type": "object",
      "properties": {
        "paging": {
          "type": "object",
          "properties": {
            "total": {
              "type": "number",
              "example": 50
            },
            "offset": {
              "type": "number",
              "example": 0
            },
            "limit": {
              "type": "number",
              "example": 50
            }
          }
        },
        "categories": {
          "type": "array",
          "example": [
            "MLA1234",
            "MLA1235",
            "MLA1236",
            "MLA1237"
          ],
          "items": {
            "type": "string"
          }
        },
        "items": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "example": "Lorem ipsum odor amet"
              },
              "title": {
                "type": "string",
                "example": "Lorem ipsum odor amet, consectetuer adipiscing elit"
              },
              "price": {
                "type": "object",
                "properties": {
                  "currency": {
                    "type": "string",
                    "example": "MXN"
                  },
                  "amount": {
                    "type": "number",
                    "example": 100
                  },
                  "decimals": {
                    "type": "number",
                    "example": 10
                  }
                }
              },
              "picture": {
                "type": "string",
                "example": "https://http2.mlstatic.com/D_923597-MLB52540279668_112022-O.jpg"
              },
              "condition": {
                "type": "string",
                "example": "new"
              },
              "free_shipping": {
                "type": "boolean",
                "example": true
              }
            }
          }
        }
      }
    }
  },
  "security": [
    {
      "authorization": []
    }
  ]
}